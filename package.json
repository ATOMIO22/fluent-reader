{
  "name": "fluent-reader",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^1.0.5",
    "@chakra-ui/react": "^1.3.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "formik": "^2.2.6",
    "framer-motion": "^3.3.0",
    "husky": "^4.3.8",
    "i18next": "^19.8.7",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-http-backend": "^1.1.0",
    "lint-staged": "^10.5.3",
    "node-sass": "^4.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.6",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "replace": "^1.2.0",
    "typescript": "^4.1.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "build": "react-scripts build",
    "check-tsc": "node src/scripts/compile-ts-lint.js --allFiles",
    "deploy": "yarn git-pull; yarn install; yarn build; yarn docker-stop; yarn docker-rm; yarn docker-build; yarn docker-run;",
    "docker-build": "docker build -f Dockerfile -t web:latest .",
    "docker-rm": "docker rm web",
    "docker-run": "docker run --name web -d -p 80:80 web:latest",
    "docker-stop": "docker stop web",
    "eject": "react-scripts eject",
    "gen:comp": "node ./src/scripts/generate-react.js component",
    "git-clone": "ssh-agent bash -c 'ssh-add /home/ubuntu/.ssh/fr-web; git clone git@github.com:nramos0/fluent-reader.git'",
    "git-pull": "ssh-agent bash -c 'ssh-add /home/ubuntu/.ssh/fr-web; git pull'",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": false
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "react/jsx-indent": [
        "error",
        4
      ],
      "react/jsx-indent-props": [
        "error",
        4
      ],
      "react/jsx-boolean-value": [
        "error",
        "always"
      ],
      "react/prop-types": "off",
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "semi": "error",
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": "error",
      "no-self-compare": "error",
      "no-unused-vars": "off",
      "camelcase": "off",
      "object-shorthand": [
        "error",
        "never"
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-namespace": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "node src/scripts/compile-ts-lint.js src/react-app-env.d.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
